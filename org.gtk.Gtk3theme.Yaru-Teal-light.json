{
    "id": "org.gtk.Gtk3theme.Yaru-Teal-light",
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "20.08",
    "sdk": "org.freedesktop.Sdk",
    "build-extension": true,
    "appstream-compose": false,
    "separate-locales": false,
    "modules": [
        {
            "name": "Yaru-Teal-light",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -pm 755 /usr/share/runtime/share/themes/Yaru-Teal-light/gtk-3.0",
                "cp -frP Themes/Yaru-Teal/gtk-3.20/assets/ /usr/share/runtime/share/themes/Yaru-Teal-light/gtk-3.0/",
                "cp -frP Themes/Yaru-Teal-light/gtk-3.20/gtk.css /usr/share/runtime/share/themes/Yaru-Teal-light/gtk-3.0/gtk.css"
            ],
            "sources": [
                {
                    "type": "archive",
                    "archive-type": "tar-gzip",
                    "url": "https://api.github.com/repos/Jannomag/Yaru-Colors/tarball/21.04snap",
                    "sha256": "9068994fdf27a1ab44f8289752af67b0c6fe71ac57e0bd238d21531286554cca"
                }
            ]
        },
        {
            "name": "appdata",
            "buildsystem": "simple",
            "build-commands": [
                "mkdir -p ${FLATPAK_DEST}/share/appdata",
                "cp org.gtk.Gtk3theme.Yaru-Teal-light.appdata.xml ${FLATPAK_DEST}/share/appdata",
                "appstream-compose --basename=org.gtk.Gtk3theme.Yaru-Teal-light --prefix=${FLATPAK_DEST} --origin=flatpak org.gtk.Gtk3theme.Yaru-Teal-light"
            ],
            "sources": [
                {
                    "type": "file",
                    "path": "org.gtk.Gtk3theme.Yaru-Teal-light.appdata.xml"
                }
            ]
        }
    ]
}